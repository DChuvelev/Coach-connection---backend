{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/controllers/clients.ts.old",
    "src/models/coaches.ts.old",
    "src/models/clients.ts.old",
    "src/models/coaches.js",
    "src/models/clients.js",
    "src/models/users.temp",
    "src/models/chats.ts.temp",
    "src/models/baseUser.old"
  ],
  "exclude": ["node_modules", "*.temp"]
}
